<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DashBoardActivity"
        android:padding="@dimen/margin_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/rowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:elevation="2dp"
            app:cardElevation="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.DashBoardActivity"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lbl_task_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task One : "
                    style="@style/custom_title_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_task_one_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calling Kesari.tour API to get location response and show in list. \ne.g Place : Andaman"
                    style="@style/custom_desc_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_task_one" />

                <Button
                    android:id="@+id/btn_task_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue.."
                    style="@style/custom_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_task_one_desc"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginEnd="@dimen/margin_8"
            android:elevation="2dp"
            app:cardElevation="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rowLayout" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.DashBoardActivity"
                android:padding="10dp">

                <TextView
                    android:id="@+id/lbl_task_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Two : "
                    style="@style/custom_title_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_task_two_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showing list of student data with roomDB CURD operation."
                    style="@style/custom_desc_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_task_two" />

                <Button
                    android:id="@+id/btn_task_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue.."
                    style="@style/custom_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_task_two_desc"
                    app:layout_constraintRight_toRightOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>